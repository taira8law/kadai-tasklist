<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
      <%= form_with(model: @task, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :content, 'タスク' %>
          <%= f.text_field :content, class: 'form-control'%>
          <%= f.label :status, 'ステータス' %>
          <%= f.text_field :status, class: 'form-control'%>
        </div>
        <%= f.submit 'Create', class: 'btn btn-primary btn-block' %>
      <% end %>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">Tasklist<span class="badge badge-secondary"><%= @count_microposts %></span></a></li>
      <li class="nav-item"><a href="#" class="nav-link">Followings</a></li>
      <li class="nav-item"><a href="#" class="nav-link">Followers</a></li>
    </ul>
  </div>
  <%= link_to 'Logout', logout_path, method: :delete %></li>
</div>